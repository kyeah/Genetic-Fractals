cd libs/AntTweakBar/src; make;
echo "Please enter your shared library folder (default:/usr/local/lib): ";
read lib_path;

if [[ -z "$lib_path" ]]; then
   lib_path=/usr/local/lib
fi

if [[ -d "$lib_path" ]]; then
   sudo ln -s libs/AntTweakBar/lib/libAntTweakBar.so $lib_path/libAntTweakBar.so.1
else
   echo "$lib_path is not a directory"
fi